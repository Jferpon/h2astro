<style>
/* ===== LAYOUT GENERAL ===== */
h1, h2{
  margin-top:2.3rem;
  text-align: center;
}

/* ===== HORARIOS + TIENDAS ===== */
.tiendas-layout {
  display: grid;
  grid-template-columns: 1fr auto;
  gap: 40px;
  margin-left:-140px;
}

/* Columna de tiendas */
.tiendas {
  display: flex;
  flex-direction: column;
  gap: 40px;
}

/* Horarios */
.horarios {
  position: sticky;
  border-collapse: collapse;
  border-color: black;
  border-style: solid ;
  border-width: 2px;
  top: 100px;
  text-align: center;
  background: rgb(53, 117, 255);
  padding: 28px;
  border-radius: 16px;
  overflow-y: auto;
  max-height: 46vh; 
  min-width: 260px;
}

.horarios h3 {
  color: white;
  font-size: 1.6rem;
  margin-bottom: 16px;
}

.horarios ul {
  color:white;
  list-style: none;
  padding: 0;
  margin: 0;
}

.horarios li {
  color:black;
  font-weight: bold;
  margin-bottom: 18px;
  font-size: 1.25rem;
  line-height: 1.4;
}
.horarios li strong{
  color:white;
  font-size: 1.3rem;
}

/* ===== TIENDA ===== */
.tienda-contenedor {
  display: flex;
  gap: 20px;
  align-items: flex-start;
}

.tienda-contenedor img {
  border-radius: 25px;
  object-fit: contain;
  flex-shrink: 0;
}

/* ===== DATOS DE CONTACTO ===== */
.datos-contacto {
  display: flex;
  flex-direction: column;
  gap: 8px;
  padding: 8px;
  background: #f5f7fa;
  border-radius: 12px;
  flex: 1;
  font-size: 0.9rem;
}

.dato-contacto {
  display: flex;
  align-items: center;
  gap: 10px;
}

.icono {
  width: 30px;
  height: 30px;
  background-color: rgb(53, 117, 255);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  flex-shrink: 0;
}

.icono svg {
  width: 16px;
  height: 16px;
}

.dato-texto {
  font-size: 0.9rem;
  font-weight: 500;
  margin: 0;
}

.dato-texto a {
  color: inherit;
  text-decoration: none;
}

.dato-texto a:hover {
  text-decoration: underline;
}

.imgEstepona {
  max-width: 68vh;
  height: 42vh;
}
.imgSanPedro{
  max-width: 65vh;
  height: 45vh;
}
.imgSotogrande{
  max-width: 60vh;
  height: 40vh;
}
.imgSabinillas{
  max-width: 50vh;
  height: 40vh;
}
.imgCoin{
  max-width: 50vh;
  height: 35vh;
}

/* ===== RESPONSIVE ===== */
@media (max-width: 480px) {
  h1, h2 {
    font-size: 1.6rem;
    margin-top: 1.5rem;
  }

  .tiendas-layout {
    grid-template-columns: 1fr;
    margin-left: 0;
    gap: 30px;
  }

  .tienda-contenedor {
    flex-direction: column;
    align-items: center;
  }

  .tienda-contenedor img {
    width: 100%;
    height: auto;
    max-width: 100%;
  }

  .imgEstepona,
  .imgSanPedro,
  .imgSabinillas{
    max-width: 100%;
    height: auto;
  }

  .datos-contacto {
    width: 100%;
    font-size: 0.85rem;
  }

  .dato-texto {
    font-size: 0.85rem;
  }

  .horarios {
    position: relative;
    top: auto;
    max-height: none;
    min-width: 100%;
    padding: 20px;
  }

  .horarios h3 {
    font-size: 1.4rem;
  }

  .horarios li {
    font-size: 1.1rem;
  }
}
@media (max-width: 768px) {
  h1{
    font-size: 2.5rem;
  }
  .imgCoin, .imgSotogrande{
    max-width: 30rem;
    height: 25rem;
  }
  .imgEstepona, .imgSanPedro, .imgSabinillas{
    max-width: 90%;
    height: auto;
  }
  main {
    padding: 20px;
  }

  .tiendas-layout {
    grid-template-columns: 1fr;
    margin-left: 0;
    gap: 40px;
  }

  .tienda-contenedor {
    flex-direction: column;
    align-items: center;
  }

  .datos-contacto {
    width: 100%;
  }

  .horarios {
    grid-row: 1;
    width: 60%;
    position: relative;
    top: auto;
    min-width: 90%;
    padding: 16px;
    border-radius: 12px;
  }

  .tiendas {
    grid-row: 2;
  }

  .horarios h3 {
    font-size: 1.3rem;
    margin-bottom: 2px;
  }

  .horarios li {
    font-size: 0.85rem;
    margin-bottom: 10px;
    line-height: 1.4;
  }

  .horarios li br {
    display: none;
  }

  .horarios li strong {
    font-size: 0.9rem;
    margin-right: 6px;
    display: inline;
  }
}
</style>

