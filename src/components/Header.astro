---
import HeaderLink from './HeaderLink.astro';
---

<header>
  <nav class="nav">
    <!-- LOGO -->
    <a href="/" class="logo" aria-label="Achedosol">
      <img src="/logo.webp" alt="Achedosol" />
    </a>

    <!-- BUSCADOR -->
    <form class="search-bar" role="search">
      <svg
        class="search-icon"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <circle cx="11" cy="11" r="8" />
        <line x1="21" y1="21" x2="16.65" y2="16.65" />
      </svg>

      <input
        type="search"
        placeholder="Buscar"
        aria-label="Buscar"
      />
    </form>

    <!-- ENLACES -->
    <div class="internal-links">
      <HeaderLink href="/">Productos</HeaderLink>
      <HeaderLink href="/blog">Mi Achedosol</HeaderLink>
      <HeaderLink href="/about">Tienda Online</HeaderLink>
    </div>
  </nav>
</header>

<style>
  header {
    padding: 0 1rem;
    background: rgb(53, 117, 255);
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
  }

  /* GRID LAYOUT */
  .nav {
    display: grid;
    grid-template-columns: auto 1fr auto;
    align-items: center;
    column-gap: 1rem; /* menos espacio entre logo y buscador */
  }

  /* LOGO */
  .logo img {
    height: 180px; /* logo m치s grande */
    width: auto;
    display: block;
  }

  /* BUSCADOR */
  .search-bar {
    position: relative;
    width: 100%;
    max-width: 300px; /* menos ancho para que no empuje */
    justify-self: center;
  }

  .search-bar input {
    width: 100%;
    height: 36px;             /* un poco m치s peque침o */
    padding-left: 2rem;       /* espacio suficiente para la lupa */
    padding-right: 0.8rem;    /* sin exagerar el padding derecho */
    border-radius: 999px;
    border: none;
    outline: none;
    background: white;
    font-size: 0.9rem;
  }

  .search-icon {
    position: absolute;
    left: 0.5rem;       /* m치s cerca del borde */
    top: 50%;
    transform: translateY(-50%);
    width: 16px;
    height: 16px;
    color: #777;
    pointer-events: none;
  }

  /* ENLACES */
  .internal-links {
    display: flex;
    align-items: center;
    justify-self: end;   /* pegar a la derecha */
    gap: 0.5rem;
  }

  .internal-links a {
    padding: 0.5em 0.75em;
    color: white;
    text-decoration: none;
    border-bottom: 4px solid transparent;
  }

  .internal-links a.active {
    border-bottom-color: var(--accent);
  }
</style>
