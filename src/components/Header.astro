---
import HeaderLink from './HeaderLink.astro';
---

<header>
  <nav class="nav">
    <!-- LOGO -->
    <a href="/" class="logo" aria-label="Achedosol">
      <img src="/logo.webp" alt="Achedosol" />
    </a>

    <!-- BUSCADOR -->
    <form class="search-bar" role="search">
      <svg
        class="search-icon"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <circle cx="11" cy="11" r="8" />
        <line x1="21" y1="21" x2="16.65" y2="16.65" />
      </svg>

      <input
        type="search"
        placeholder="Buscar"
        aria-label="Buscar"
      />
    </form>

    <!-- ENLACES -->
    <div class="internal-links">
      <HeaderLink href="/">Productos</HeaderLink>
      <HeaderLink href="/blog">Mi Achedosol</HeaderLink>
      <HeaderLink href="/about">Tienda Online</HeaderLink>
    </div>
  </nav>
</header>

<style>
/* ===========================
   HEADER GENERAL
=========================== */
header {
  padding: 0 1rem;
  background: rgb(53, 117, 255);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

/* ===========================
   NAV PRINCIPAL
=========================== */
.nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap; /* permite segunda fila */
  row-gap: 0.5rem; /* espacio entre filas */
}

/* ===========================
   LOGO
=========================== */
.logo img {
  height: auto;
  max-height: 180px;
  width: auto;
  display: block;
}

/* ===========================
   BUSCADOR
=========================== */
.search-bar {
  position: relative;
  width: 100%;
  max-width: 500px;
  margin-top: 0.5rem; /* espacio en la segunda fila */
}

.search-bar input {
  width: 100%;
  height: 36px;
  padding-left: 2rem;
  padding-right: 0.8rem;
  border-radius: 999px;
  border: none;
  outline: none;
  background: white;
  font-size: 0.9rem;
}

.search-icon {
  position: absolute;
  left: 0.5rem;
  top: 50%;
  transform: translateY(-50%);
  width: 16px;
  height: 16px;
  color: #777;
  pointer-events: none;
}

/* ===========================
   ENLACES INTERNOS
=========================== */
.internal-links {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.internal-links a {
  padding: 0.5em 0.75em;
  color: white;
  text-decoration: none;
  border-bottom: 4px solid transparent;
}

.internal-links a.active {
  border-bottom-color: var(--accent);
}

/* ===========================
   MEDIA QUERIES
=========================== */

/* TABLET */
@media (max-width: 1024px) {
  .nav {
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    row-gap: 0.5rem;
  }

  /* LOGO a la izquierda */
  .logo {
    margin-right: auto;
  }

  /* ENLACES a la derecha */
  .internal-links {
    margin-left: auto;
  }

  .logo img {
    max-height: 120px;
  }

  /* BUSCADOR en segunda fila */
  .search-bar {
    flex-basis: 100%;
    max-width: 100%;
    order: 2;
    margin-top: 0.5rem;
  }
}


/* MÃ“VIL */
@media (max-width: 768px) {
  .nav {
    justify-content: center;
    flex-wrap: wrap;
    row-gap: 0.75rem;
  }

  /* LOGO arriba centrado */
  .logo {
    width: 100%;
    display: flex;
    justify-content: center;
  }

  .logo img {
    max-height: 80px;
  }

  /* NAV centrado */
  .internal-links {
    order: 1;
    width: 100%;
    justify-content: center;
    gap: 0.75rem;
  }

  /* BUSCADOR abajo */
  .search-bar {
    order: 2;
    width: 95%;
    max-width: none;
    margin-top: 0.5rem;
  }
}


</style>
