  /* ===== LAYOUT GENERAL ===== */
main {
  max-width: 1200px;
  margin: 0 auto;
  padding: 20px 40px; /* más espacio a los lados */
}

h1, h2, h3, h4, h5 {
  margin: 0 0 10px 0;
}

/* ===== HORARIOS + TIENDAS ===== */
.tiendas-layout {
  display: grid;
  grid-template-columns: 1fr auto;
  gap: 40px;
  margin-top: 40px;
}

/* Columna de tiendas */
.tiendas {
  display: flex;
  flex-direction: column;
  gap: 40px;
}

/* Horarios */
.horarios {
  position: sticky;
  top: 100px;
  text-align: center;
  background: #f5f7fa;
  padding: 20px;
  border-radius: 12px;
  min-width: 220px;
}

.horarios ul {
  list-style: none;
  padding: 0;
  margin: 20px 0 0;
}

.horarios li {
  margin-bottom: 10px;
  font-size: 0.95rem;
}

/* ===== TIENDA ===== */
.tienda-contenedor {
  display: flex;
  gap: 20px;
  align-items: flex-start; /* alineamos el contacto al inicio de la imagen */
}

.tienda-contenedor img {
  width: auto;          /* ancho automático según proporción */
  max-width: 200px;     /* límite máximo para no desbordar */
  height: auto;         /* altura automática */
  border-radius: 12px;
  object-fit: contain;  /* no recortar la imagen */
  flex-shrink: 0;
  margin-right: 20px;   /* espacio entre imagen y contacto */
}

/* ===== DATOS DE CONTACTO ===== */
.datos-contacto {
  display: flex;
  flex-direction: column;
  gap: 8px;
  padding: 8px;
  background: #f5f7fa;
  border-radius: 12px;
  flex: 1;                /* ocupa el espacio restante */
  font-size: 0.9rem;      /* tamaño más pequeño */
}

.dato-contacto {
  display: flex;
  align-items: center;
  gap: 10px;
}

.icono {
  width: 30px;
  height: 30px;
  background-color: rgb(53, 117, 255);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  flex-shrink: 0;
}

.icono svg {
  width: 16px;
  height: 16px;
}

.dato-texto {
  font-size: 0.9rem;
  font-weight: 500;
  margin: 0;
}

.dato-texto a {
  color: inherit;
  text-decoration: none;
}

.dato-texto a:hover {
  text-decoration: underline;
}

/* ===== PROVEEDORES ===== */
.proveedores {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20px;
  align-items: center;
  justify-items: center;
  margin: 40px 0;
}

.proveedores img {
  max-width: 120px; /* tamaño más pequeño como antes */
  height: auto;
  object-fit: contain;
}

/* ===== RESPONSIVE ===== */
@media (max-width: 768px) {
  main {
    padding: 20px;
  }

  .tiendas-layout {
    grid-template-columns: 1fr;
  }

  .horarios {
    position: relative;
    top: auto;
    margin-top: 20px;
  }

  .tienda-contenedor {
    flex-direction: column;
  }

  .proveedores {
    grid-template-columns: repeat(2, 1fr);
  }
}

  </style>
</head>
