---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import LatestPosts from '../components/LatestPosts.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />

		<style>
			/* === PROVEEDORES === */
			.proveedores {
				display: grid;
				grid-template-columns: repeat(4, 1fr);
				gap: 20px;
				align-items: center;
				justify-items: center;
				margin: 40px 0;
			}

			.proveedores img {
				max-width: 100%;
				height: auto;
				object-fit: contain;
			}

			/* === VERSIÓN MÓVIL === */
			@media (max-width: 768px) {
				.proveedores {
					gap: 10px;
				}

				.proveedores img {
					width: 70px;   /* aquí controlas el tamaño en móvil */
				}
			}
		</style>
	</head>

	<body>
		<Header />

		<main>
			<h1>Tiendas achedosol</h1>

			<p>
				¿Imagenes tiendas + horarios y contactos?
			</p>

			
			<p>
			</p>

			<h2>Proveedores</h2>

			<div class="proveedores">
				<img src="/clever.png" alt="clever" />
				<img src="/daikin.svg" alt="daikin" />
				<img src="/ASP.webp" alt="ASP" />
				<img src="/ariston.svg" alt="ariston" />
				<img src="/Grohe.svg.png" alt="Grohe" />
				<img src="/bombas_ideal.jfif" alt="bombas_ideal" />
				<img src="/zodiac.png" alt="zodiac" />
				<img src="/tecnoagua.jfif" alt="tecnoagua" />
				<img src="/sth.jfif" alt="sth" />
				<img src="/roth.png" alt="roth" />
				<img src="/hunter.png" alt="hunter" />
				<img src="/jimten.png" alt="jimten"   />
			</div>

			<h2>Ultimas noticias</h2>

			<p>
				Pásate por nuestro blog y mantente siempre actualizado con las
				últimas noticias del sector, además de muchos interesantes artículos y consejos.
			</p>

			<LatestPosts />
		</main>

		<Footer />
	</body>
</html>
