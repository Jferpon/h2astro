      /* ===== LAYOUT GENERAL ===== */
      main {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
      }

      /* ===== HORARIOS + TIENDAS ===== */
      .tiendas-layout {
        display: grid;
        grid-template-columns: 260px 1fr;
        gap: 40px;
        margin-top: 40px;
      }

      .horarios {
        position: sticky;
        top: 100px;
        text-align: center;
        background: #f5f7fa;
        padding: 20px;
        border-radius: 12px;
      }

      .horarios ul {
        list-style: none;
        padding: 0;
        margin: 20px 0 0;
      }

      .horarios li {
        margin-bottom: 10px;
        font-size: 0.95rem;
      }

      /* ===== TIENDA ===== */
      .tienda {
        margin-bottom: 60px;
      }

      .tienda img {
        width: 65%;
        max-width: 500px;
        border-radius: 12px;
        margin-bottom: 15px;
      }

      /* ===== DATOS DE CONTACTO ===== */
      .datos-contacto {
        margin-top: 20px;
      }

      .dato-contacto {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 14px;
      }

      .icono {
        width: 36px;
        height: 36px;
        background-color: rgb(53, 117, 255);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        flex-shrink: 0;
      }

      .icono svg {
        width: 20px;
        height: 20px;
      }

      .dato-texto {
        font-size: 1rem;
        font-weight: 500;
        margin: 0;
      }

      .dato-texto a {
        color: inherit;
        text-decoration: none;
      }

      .dato-texto a:hover {
        text-decoration: underline;
      }

      /* ===== PROVEEDORES ===== */
      .proveedores {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 20px;
        align-items: center;
        justify-items: center;
        margin: 40px 0;
      }

      .proveedores img {
        max-width: 100%;
        height: auto;
        object-fit: contain;
      }

      /* ===== RESPONSIVE ===== */
      @media (max-width: 768px) {
        .tiendas-layout {
          grid-template-columns: 1fr;
        }

        .horarios {
          position: relative;
          top: auto;
        }

        .proveedores {
          grid-template-columns: repeat(2, 1fr);
        }
      }
    </style>
  </head>

